{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["DOM", "ES2022"],
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["packages/lib/*"],
      "@ui/*": ["packages/ui/*"]
    },
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["apps/**/*", "packages/**/*"]
}
